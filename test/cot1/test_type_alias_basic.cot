// Test: Type Alias Basic Syntax
// Feature: type Name = ExistingType
//
// This test verifies:
// 1. Simple type alias declaration
// 2. Using alias as function parameter type
// 3. Using alias as return type
// 4. Alias to pointer types

// Simple aliases
type NodeIndex = i64;
type SymbolId = i64;
type Offset = i64;

// Pointer alias
type NodePtr = *Node;

struct Node {
    index: NodeIndex,
    next: NodePtr,
}

fn getIndex(idx: NodeIndex) NodeIndex {
    return idx + 1;
}

fn test_alias_parameter() i64 {
    let idx: NodeIndex = 5;
    let result: NodeIndex = getIndex(idx);
    if result == 6 {
        return 1;
    }
    return 0;
}

fn test_alias_assignment() i64 {
    let a: NodeIndex = 10;
    let b: SymbolId = 20;
    // These are both i64, so addition should work
    let sum: i64 = a + b;
    if sum == 30 {
        return 1;
    }
    return 0;
}

fn test_alias_struct_field() i64 {
    var node: Node = undefined;
    node.index = 42;
    node.next = null;
    if node.index == 42 {
        return 1;
    }
    return 0;
}

