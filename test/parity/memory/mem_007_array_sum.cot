extern fn malloc_i64(size: i64) *i64;
fn array_sum(arr: *i64, len: i64) i64 {
    var sum: i64 = 0;
    var i: i64 = 0;
    while i < len {
        sum = sum + (arr + i).*;
        i = i + 1;
    }
    return sum;
}
test "memory: array sum" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 10;
    (arr + 1).* = 20;
    (arr + 2).* = 30;
    (arr + 3).* = 40;
    (arr + 4).* = 50;
    @assert(array_sum(arr, 5) == 150)
}
