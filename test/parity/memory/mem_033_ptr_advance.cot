extern fn malloc_i64(count: i64) *i64;
test "memory: ptr advance" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 10;
    (arr + 1).* = 20;
    (arr + 2).* = 30;
    (arr + 3).* = 40;
    (arr + 4).* = 50;
    var p: *i64 = arr;
    var sum: i64 = 0;
    var i: i64 = 0;
    while i < 5 {
        sum = sum + (p + i).*;
        i = i + 1;
    }
    @assert(sum == 150)
}
