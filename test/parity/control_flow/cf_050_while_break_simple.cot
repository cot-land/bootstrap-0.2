fn sum_until_threshold() i64 {
    var sum: i64 = 0;
    var i: i64 = 0;
    while i < 100 {
        sum = sum + i;
        if sum > 20 {
            i = i + 1;
            if i > 0 {
                return sum;
            }
        }
        i = i + 1;
    }
    return 0;
}
test "control flow: while break simple" {
    // sum should be 21 when it first exceeds 20 (0+1+2+3+4+5+6=21)
    @assert(sum_until_threshold() == 21)
}
