fn conditional_sum(do_sum: i64, n: i64) i64 {
    if do_sum != 0 {
        var sum: i64 = 0;
        var i: i64 = 1;
        while i <= n {
            sum = sum + i;
            i = i + 1;
        }
        return sum;
    }
    return 0;
}
test "control flow: while in if" {
    @assert(conditional_sum(1, 5) == 15)
}
