extern fn malloc_i64(size: i64) *i64;
fn binary_search(arr: *i64, len: i64, target: i64) i64 {
    var lo: i64 = 0;
    var hi: i64 = len - 1;
    while lo <= hi {
        var mid: i64 = (lo + hi) / 2;
        var val: i64 = (arr + mid).*;
        if val == target { return mid; }
        if val < target { lo = mid + 1; }
        else { hi = mid - 1; }
    }
    return -1;
}
test "control flow: binary search" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 1; (arr + 1).* = 3; (arr + 2).* = 5;
    (arr + 3).* = 7; (arr + 4).* = 9;
    @assert(binary_search(arr, 5, 5) == 2)
}
