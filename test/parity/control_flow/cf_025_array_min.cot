extern fn malloc_i64(size: i64) *i64;
fn array_min(arr: *i64, len: i64) i64 {
    var min: i64 = (arr + 0).*;
    var i: i64 = 1;
    while i < len {
        var val: i64 = (arr + i).*;
        if val < min { min = val; }
        i = i + 1;
    }
    return min;
}
test "control flow: array min" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 3; (arr + 1).* = 7; (arr + 2).* = 2;
    (arr + 3).* = 9; (arr + 4).* = 5;
    @assert(array_min(arr, 5) == 2)
}
