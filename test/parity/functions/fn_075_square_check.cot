fn is_perfect_square(n: i64) i64 {
    var i: i64 = 1;
    while i * i <= n {
        if i * i == n { return 1; }
        i = i + 1;
    }
    return 0;
}
test "function: square check" {
    var r1: i64 = is_perfect_square(16);
    var r2: i64 = is_perfect_square(17);
    var r3: i64 = is_perfect_square(100);
    @assert(r1 == 1 and r2 == 0 and r3 == 1)
}
