fn collatz_steps(n: i64) i64 {
    var steps: i64 = 0;
    var x: i64 = n;
    while x > 1 {
        if x % 2 == 0 {
            x = x / 2;
        } else {
            x = 3 * x + 1;
        }
        steps = steps + 1;
    }
    return steps;
}
test "function: collatz" {
    @assert(collatz_steps(27) == 111)
}
