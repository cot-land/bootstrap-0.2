fn collatz_steps(n: i64) i64 {
    var steps: i64 = 0;
    var x: i64 = n;
    while x > 1 {
        if x % 2 == 0 {
            x = x / 2;
        } else {
            x = 3 * x + 1;
        }
        steps = steps + 1;
    }
    return steps;
}
fn main() i64 {
    if collatz_steps(27) == 111 { return 0; }
    return 1;
}
