fn is_prime(n: i64) i64 {
    if n <= 1 { return 0; }
    if n <= 3 { return 1; }
    if n % 2 == 0 { return 0; }
    var i: i64 = 3;
    while i * i <= n {
        if n % i == 0 { return 0; }
        i = i + 2;
    }
    return 1;
}
test "function: is prime" {
    var p1: i64 = is_prime(2);
    var p2: i64 = is_prime(17);
    var p3: i64 = is_prime(18);
    var p4: i64 = is_prime(97);
    @assert(p1 == 1 and p2 == 1 and p3 == 0 and p4 == 1)
}
