fn mod_pow(base: i64, exp: i64, mod: i64) i64 {
    var result: i64 = 1;
    var b: i64 = base % mod;
    var e: i64 = exp;
    while e > 0 {
        if e % 2 == 1 {
            result = (result * b) % mod;
        }
        e = e / 2;
        b = (b * b) % mod;
    }
    return result;
}
test "function: modular exp" {
    @assert(mod_pow(2, 10, 1000) == 24)
}
