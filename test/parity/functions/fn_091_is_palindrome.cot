fn reverse_helper(n: i64, acc: i64) i64 {
    if n == 0 { return acc; }
    return reverse_helper(n / 10, acc * 10 + n % 10);
}
fn is_palindrome(n: i64) i64 {
    if n < 0 { return 0; }
    if reverse_helper(n, 0) == n { return 1; }
    return 0;
}
test "function: is palindrome" {
    @assert(is_palindrome(12321) == 1 and is_palindrome(12345) == 0)
}
