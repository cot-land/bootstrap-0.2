fn fast_pow(base: i64, exp: i64) i64 {
    var result: i64 = 1;
    var b: i64 = base;
    var e: i64 = exp;
    while e > 0 {
        if e % 2 == 1 {
            result = result * b;
        }
        e = e / 2;
        b = b * b;
    }
    return result;
}
test "function: exp by squaring" {
    @assert(fast_pow(2, 10) == 1024)
}
