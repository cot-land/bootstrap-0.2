extern fn malloc_i64(count: i64) *i64;
fn binary_search(arr: *i64, n: i64, target: i64) i64 {
    var low: i64 = 0;
    var high: i64 = n - 1;
    while low <= high {
        var mid: i64 = (low + high) / 2;
        var val: i64 = (arr + mid).*;
        if val == target { return mid; }
        if val < target { low = mid + 1; }
        if val > target { high = mid - 1; }
    }
    return 0 - 1;
}
fn main() i64 {
    var arr: *i64 = malloc_i64(7);
    (arr + 0).* = 10;
    (arr + 1).* = 20;
    (arr + 2).* = 30;
    (arr + 3).* = 40;
    (arr + 4).* = 50;
    (arr + 5).* = 60;
    (arr + 6).* = 70;
    if binary_search(arr, 7, 40) == 3 { return 0; }
    return 1;
}
