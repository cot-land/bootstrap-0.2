extern fn malloc_i64(count: i64) *i64;
fn norm_squared(arr: *i64, n: i64) i64 {
    var sum: i64 = 0;
    var i: i64 = 0;
    while i < n {
        var v: i64 = (arr + i).*;
        sum = sum + v * v;
        i = i + 1;
    }
    return sum;
}
test "array: norm squared" {
    var arr: *i64 = malloc_i64(3);
    (arr + 0).* = 3;
    (arr + 1).* = 4;
    (arr + 2).* = 0;
    @assert(norm_squared(arr, 3) == 25)
}
