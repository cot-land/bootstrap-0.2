extern fn malloc_i64(count: i64) *i64;
test "array: fill pattern" {
    var arr: *i64 = malloc_i64(10);
    var i: i64 = 0;
    while i < 10 {
        (arr + i).* = (i + 1) * (i + 1);
        i = i + 1;
    }
    var sum: i64 = 0;
    i = 0;
    while i < 10 {
        sum = sum + (arr + i).*;
        i = i + 1;
    }
    @assert(sum == 385)
}
