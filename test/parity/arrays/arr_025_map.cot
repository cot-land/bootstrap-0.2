extern fn malloc_i64(count: i64) *i64;
fn map_double(arr: *i64, n: i64) void {
    var i: i64 = 0;
    while i < n {
        (arr + i).* = (arr + i).* * 2;
        i = i + 1;
    }
}
test "array: map" {
    var arr: *i64 = malloc_i64(4);
    (arr + 0).* = 1;
    (arr + 1).* = 2;
    (arr + 2).* = 3;
    (arr + 3).* = 4;
    map_double(arr, 4);
    @assert((arr + 0).* == 2 and (arr + 3).* == 8)
}
