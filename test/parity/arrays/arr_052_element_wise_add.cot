extern fn malloc_i64(count: i64) *i64;
fn add_arrays(a: *i64, b: *i64, c: *i64, n: i64) void {
    var i: i64 = 0;
    while i < n {
        (c + i).* = (a + i).* + (b + i).*;
        i = i + 1;
    }
}
test "array: element wise add" {
    var a: *i64 = malloc_i64(3);
    var b: *i64 = malloc_i64(3);
    var c: *i64 = malloc_i64(3);
    (a + 0).* = 1; (b + 0).* = 10;
    (a + 1).* = 2; (b + 1).* = 20;
    (a + 2).* = 3; (b + 2).* = 30;
    add_arrays(a, b, c, 3);
    @assert((c + 1).* == 22)
}
