extern fn malloc_i64(count: i64) *i64;
fn reverse(arr: *i64, n: i64) void {
    var i: i64 = 0;
    var j: i64 = n - 1;
    while i < j {
        var t: i64 = (arr + i).*;
        (arr + i).* = (arr + j).*;
        (arr + j).* = t;
        i = i + 1;
        j = j - 1;
    }
}
test "array: reverse in place" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 1;
    (arr + 1).* = 2;
    (arr + 2).* = 3;
    (arr + 3).* = 4;
    (arr + 4).* = 5;
    reverse(arr, 5);
    @assert((arr + 0).* == 5 and (arr + 4).* == 1 and (arr + 2).* == 3)
}
