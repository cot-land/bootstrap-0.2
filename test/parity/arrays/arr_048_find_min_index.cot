extern fn malloc_i64(count: i64) *i64;
fn find_min_idx(arr: *i64, n: i64) i64 {
    var min_idx: i64 = 0;
    var i: i64 = 1;
    while i < n {
        if (arr + i).* < (arr + min_idx).* {
            min_idx = i;
        }
        i = i + 1;
    }
    return min_idx;
}
test "array: find min index" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 30;
    (arr + 1).* = 50;
    (arr + 2).* = 10;
    (arr + 3).* = 40;
    (arr + 4).* = 20;
    @assert(find_min_idx(arr, 5) == 2)
}
