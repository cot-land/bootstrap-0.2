extern fn malloc_i64(count: i64) *i64;
fn fill(arr: *i64, n: i64, val: i64) void {
    var i: i64 = 0;
    while i < n {
        (arr + i).* = val;
        i = i + 1;
    }
}
fn main() i64 {
    var arr: *i64 = malloc_i64(5);
    fill(arr, 5, 42);
    if (arr + 0).* == 42 and (arr + 2).* == 42 and (arr + 4).* == 42 { return 0; }
    return 1;
}
