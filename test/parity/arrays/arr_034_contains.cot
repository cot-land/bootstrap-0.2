extern fn malloc_i64(count: i64) *i64;
fn contains(arr: *i64, n: i64, val: i64) i64 {
    var i: i64 = 0;
    while i < n {
        if (arr + i).* == val {
            return 1;
        }
        i = i + 1;
    }
    return 0;
}
test "array: contains" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 10;
    (arr + 1).* = 20;
    (arr + 2).* = 30;
    (arr + 3).* = 40;
    (arr + 4).* = 50;
    var r1: i64 = contains(arr, 5, 30);
    var r2: i64 = contains(arr, 5, 35);
    @assert(r1 == 1 and r2 == 0)
}
