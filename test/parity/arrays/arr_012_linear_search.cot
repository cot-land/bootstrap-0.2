extern fn malloc_i64(count: i64) *i64;
fn linear_search(arr: *i64, len: i64, target: i64) i64 {
    var i: i64 = 0;
    while i < len {
        if (arr + i).* == target {
            return i;
        }
        i = i + 1;
    }
    return 0 - 1;
}
test "array: linear search" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 10;
    (arr + 1).* = 20;
    (arr + 2).* = 30;
    (arr + 3).* = 40;
    (arr + 4).* = 50;
    @assert(linear_search(arr, 5, 30) == 2)
}
