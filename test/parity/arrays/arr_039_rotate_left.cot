extern fn malloc_i64(count: i64) *i64;
fn rotate_left(arr: *i64, n: i64) void {
    if n < 2 { return; }
    var first: i64 = (arr + 0).*;
    var i: i64 = 0;
    while i < n - 1 {
        (arr + i).* = (arr + i + 1).*;
        i = i + 1;
    }
    (arr + n - 1).* = first;
}
test "array: rotate left" {
    var arr: *i64 = malloc_i64(5);
    (arr + 0).* = 1;
    (arr + 1).* = 2;
    (arr + 2).* = 3;
    (arr + 3).* = 4;
    (arr + 4).* = 5;
    rotate_left(arr, 5);
    @assert((arr + 0).* == 2 and (arr + 4).* == 1)
}
