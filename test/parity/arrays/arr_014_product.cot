extern fn malloc_i64(count: i64) *i64;
fn product(arr: *i64, len: i64) i64 {
    var prod: i64 = 1;
    var i: i64 = 0;
    while i < len {
        prod = prod * (arr + i).*;
        i = i + 1;
    }
    return prod;
}
test "array: product" {
    var arr: *i64 = malloc_i64(4);
    (arr + 0).* = 2;
    (arr + 1).* = 3;
    (arr + 2).* = 4;
    (arr + 3).* = 5;
    @assert(product(arr, 4) == 120)
}
